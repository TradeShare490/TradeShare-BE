{
	"name": "tradeshare-be",
	"version": "1.0.0",
	"description": "Back-end for TradeShare SOEN490 project by team null-pointer-exception",
	"main": "index.js",
	"scripts": {
		"build": "rimraf dist && tsc",
		"preserve": "npm run build",
		"serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
		"prestart": "npm run build",
		"start": "cross-env NODE_ENV=production node dist/index.js",
		"test": "nyc mocha --timeout=30000 -r ts-node/register src/tests/**/*.test.ts --icu-data-dir=node_modules/full-icu",
		"test-report": "nyc --reporter=html --reporter=text --reporter=lcov mocha -r ts-node/register src/tests/**/*.test.ts --icu-data-dir=node_modules/full-icu"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bowe99/TradeShare-BE.git"
	},
	"author": "null-pointer-exception",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bowe99/TradeShare-BE/issues"
	},
	"homepage": "https://github.com/bowe99/TradeShare-BE#readme",
	"dependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/body-parser": "^1.19.1",
		"@types/chai": "^4.2.21",
		"@types/config": "0.0.39",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/lodash": "^4.14.175",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.9.1",
		"@types/nodemailer": "^6.4.4",
		"axios": "^0.24.0",
		"bcrypt": "^5.0.1",
		"body-parser": "^1.19.0",
		"chai": "^4.3.4",
		"config": "^3.3.6",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^10.0.0",
		"eslint": "^7.32.0",
		"express": "^4.17.1",
		"full-icu": "^1.3.4",
		"helmet": "^4.6.0",
		"jsonwebtoken": "^8.5.1",
